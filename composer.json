{
    "name": "oxalistech/livebstack",
    "description": "A sleek Laravel Livewire CRUD generator that combines dynamic forms, tables, and modals with a clean Bootstrap 5 UI. Built for developers who value clean code and rapid development.",
    "keywords": [
        "oxalistech",
        "livebstack"
    ],
    "homepage": "https://github.com/oxalistech/livebstack",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "rizmoo",
            "email": "morrismune.mm@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "illuminate/support": "^8.0"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Oxalistech\\LiveBStack\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Oxalistech\\LiveBStack\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Oxalistech\\LiveBStack\\LiveBStackServiceProvider"
            ],
            "aliases": {
                "LiveBStack": "Oxalistech\\LiveBStack\\LiveBStackFacade"
            }
        }
    }
}
